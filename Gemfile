source 'https://rubygems.org'

gem 'rails', '3.2.12'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'sqlite3'
gem 'libv8', '>= 3.11.8'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'bootstrap-sass', '>= 2.3.0.0'

  gem 'coffee-rails', '~> 3.2.1'
  gem 'jquery-rails'
  gem 'angularjs-rails'

  # See https://github.com/sstephenson/execjs#readme for more supported runtime
  gem 'therubyracer', :platforms => :ruby, :require => :v8

  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'better_errors', '>= 0.6.0' # To get better error report
  gem 'binding_of_caller', '>= 0.6.9' # To manage error with live terminal
  gem 'meta_request', '0.2.1' # Google Chrome Extension
end



